# API configuration
PORT=3000
API_PREFIX="/api"
API_VERSION="1"
HOST="0.0.0.0"

# Environment
NODE_ENV=development

# Log
LOG_LEVEL="debug"
LOG_SILENT=false

# Swagger
SWAGGER_PREFIX="/docs"

# Database configuration - PostgreSQL
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=nestjs_db
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_URL=postgresql://${DATABASE_USER}:${DATABASE_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}/${DATABASE_NAME}?schema=public

# Redis configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_USERNAME=
REDIS_URL=redis://${REDIS_USERNAME}:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}

# Cache configuration
CACHE_TTL=3600
CACHE_MAX_ITEMS=1000

# Queue configuration
QUEUE_PREFIX="nestjs_queue"
BULL_REDIS_HOST=${REDIS_HOST}
BULL_REDIS_PORT=${REDIS_PORT}
BULL_REDIS_PASSWORD=${REDIS_PASSWORD}
BULL_REDIS_USERNAME=${REDIS_USERNAME}

# Security
JWT_SECRET=your-super-secret-key-here
JWT_EXPIRES_IN=1d
REFRESH_TOKEN_EXPIRES_IN=7d

# Rate limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100
